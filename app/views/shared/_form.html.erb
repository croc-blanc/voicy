<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.text_area :description %>
  <%= f.input :category, collection: Project.categories.keys, include_blank: false%>
  <%= f.input :begin, as: :date %>
  <%= f.input :end, as: :date %>

  <%= f.button :submit, class:"btn-danger" %>
<% end %>
